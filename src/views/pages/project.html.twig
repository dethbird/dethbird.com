{% extends 'layout.html.twig' %}
{% block title %} - Project {{project.id}}{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <div class="container col-xs-12">
        <form id="project-form">
            <input type="hidden" name="id" />
            <div class="form-group row">
                <label for="project_name" class="col-xs-2 form-control-label">Name</label>
                <div class="col-xs-10">
                    <input type="email" class="form-control" name="name" id="name" placeholder="Project Name">
                </div>
            </div>
            <div class="form-group row">
                <label for="project_name" class="col-xs-2 form-control-label">Description</label>
                <div class="col-xs-10">
                    <textarea class="form-control" name="description" id="description" placeholder="Project Description" rows="20"></textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-2">
                    <a class="btn btn-success submit-button">Save</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/project.js"></script>
{% endblock %}
