<div id="{{panel.id}}" class="card col-lg-6">
  <div class="card-block">
    {% if panel.images|length %}
      {% for image in panel.images %}
        {% if loop.index==1 %}
          <div class="card-img"><preview class="overlay-trigger"><img src="{{image.thumbnail}}" class="{{image.orientation}} hvr-bounce-in" data-image-index="0"/></preview></div>
        {% endif %}
      {% endfor %}
      {% if panel.images|length > 1 %}
      <br />
      <div class="row thumbnails">
        {% for image in panel.images %}
            <div class="col-xs-3"><thumbnail class="{%if loop.index==1%}active{%endif%}"><img src="{{image.thumbnail}}" class="{{image.orientation}} hvr-bounce-in" data-image-index="{{loop.index0}}"/></thumbnail></div>
        {% endfor %}
      </div>
      {% endif %}
      {% if panel.comments|length > 0 %}
      <br />
      <div class="row storypanel-comments-container">
          {% for comment in panel.comments %}
              <div class="col-xs-12 storypanel-comment  {% if comment.status != "" %}storypanel-comment-status-{{comment.status}}{% endif %}">
                  <div class="comment col-xs-12">
                      {{comment.comment|markdown}}
                  </div>
                  <div class="comment-annotation col-xs-12 pull-right">
                      <span class="user-login">{{comment.user}}</span>
                      <span class="timestamp">
                           {{comment.date|timestamp_date_format}}
                      </span>
                  </div>
              </div>
          {% endfor %}
      </div>
      {% endif %}
    {% else %}
    <preview><img src="https://c2.staticflickr.com/6/5007/5281085898_65f815ac08.jpg" class="landscape"/></preview>
    {% endif %}
    {% if panel.notes != "" %}
        <div class="storypanel-notes">{{panel.notes|markdown}}</div>
    {% endif %}
    <span class="pull-right label label-default page-number">{{loop.index0}}</span>
  </div>
</div>


{% if loop.index is divisible by(2) %}
</div>
<div class="row">
{% endif %}
