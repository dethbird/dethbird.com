<div class="card col-lg-4" id="{{character.id}}" class="{% if character.status!="" %}{{character.status}}{% else %}ok{% endif %}">
  <div class="card-block">
    <h3 class="card-title">{{character.name}}
    <span class="label label-info quantifier">{{character.role}}</span></h3>
  {% if character.status!="" %}
    <span class="label label-success">{{character.status}}</span>{% endif %}
  </header>
  {% if character.images|length %}
    {% for image in character.images %}
      {% if loop.index==1 %}
        <preview class="overlay-trigger"><img src="{{image.thumbnail}}" class="{{image.orientation}} hvr-bounce-in card-img" data-image-index="0"/></preview>
      {% endif %}
    {% endfor %}
    {% if character.images|length > 1 %}
    <div class="thumbnails card-block">
      <div class="row">
      {% for image in character.images %}
          <div class="col-xs-4"><thumbnail class="{%if loop.index==1%}active{%endif%}"><img src="{{image.thumbnail}}" class="{{image.orientation}} hvr-bounce-in" data-image-index="{{loop.index0}}"/></thumbnail></div>
      {% endfor %}
      </div>
    </div>
    {% endif %}
  {% else %}
    <preview><img src="https://c2.staticflickr.com/6/5007/5281085898_65f815ac08.jpg" class="landscape"/></preview>
  {% endif %}
  <occupation>{{character.occupation}}</occupation> <age>{{character.age}}</age>
  <description>{{character.description|markdown}}</description>
</div>
</div>
{% if loop.index is divisible by(3) %}
</div>
<div class="row">
{% endif %}
