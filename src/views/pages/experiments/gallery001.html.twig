{% extends 'layout-experiments.html.twig' %}
{% block head %}
<script type="text/javascript">
    var configs = {{experimentConfigs|json_encode|raw}};
</script>
{% endblock %}
{% block body %}
    {{ parent() }}
    <!-- <pre>{{instagramData|print_r}}</pre> -->
    <div id="gallery">
        <ul class="nav nav-tabs" role="tablist">
            {% for category in experimentConfigs.category %}
                <li role="presentation"><a href="#{{category.id|raw}}" aria-controls="{{category.id|raw}}" role="tab" data-toggle="tab">{{category.name|raw}}</a></li>
            {% endfor %}
        </ul>
         <!-- Tab panes -->
          <div class="tab-content">
            {% for category in experimentConfigs.category %}
                <div role="tabpanel" class="tab-pane fade" id="{{category.id}}">
                    {% if category.id == "instagram" %}
                      farts
                      {% for content in instagramData %}
                            <img src="{{content.images.thumbnail.url}}" class="thumbnail"/>
                      {% endfor %}
                    {% else %}
                      {% for content in experimentConfigs.gallery %}
                          {% if content.category_id==category.id %}
                              <img src="{{content.thumbnail}}" class="thumbnail"/>
                          {% endif %}
                      {% endfor %}
                    {% endif %}
                </div>
            {% endfor %}
          </div>
    </div>
    <!-- JAVASCRIPT -->
    <script type="text/javascript" src="/js/views/experiments/gallery001.js"></script>
{% endblock %}
