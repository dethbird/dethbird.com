{% extends 'layout.html.twig' %}
{% block title %} - Script {{script.id == "" ? " Create" : "Edit"}}{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <ol class="breadcrumb">
        <li><a href="/scripts">Scripts</a></li>
        <li class="active">{{script.id == "" ? " Create" : "Edit"}}</li>
    </ol>
    <div class="container col-xs-12">
        <form id="script-form">
            <input type="hidden" name="id" value="{{script.id}}" />
            <div class="form-group row">
                <label for="title" class="col-xs-2 form-control-label">Title</label>
                <div class="col-xs-10">
                    <input class="form-control" name="title" value="{{script.title}}" id="name" placeholder="Script Title">
                </div>
            </div>
            <div class="form-group row">
                <label for="script_name" class="col-xs-2 form-control-label">Script</label>
                <div class="col-xs-10 fountain-edit">
                    <a class="btn btn-secondary btn-sm fountain-edit-preview-button"><i class="fa fa-eye" aria-hidden="true"></i></a>
                    <textarea class="form-control fountain-edit-editor" name="script" id="script" placeholder="Script" rows="10">{{script.script}}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-2">
                    <a class="btn btn-success submit-button">Save</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/script.js"></script>
{% endblock %}
