{% extends 'layout-notes.html.twig' %}
{% block head %}
<script type="text/javascript">
  var configs = {{configs|json_encode|raw}}
  var notesConfigs = {{notesConfigs|json_encode|raw}}
</script>
{% endblock %}
{% block body %}
    {{ parent() }}
    <h1>{{notesConfigs.name}}</h1>

    {% for item in notesConfigs.list %}
      <card class="{% if item.status!="" %}{{item.status}}{% else %}ok{% endif %}">
        <name>{{item.name}}</name>
        {% if item.status!="" %}<span class="label label-success">{{item.status}}</span>{% endif %}
        <br />
        <type>{{item.type}}</type>
        <description>{{item.description|markdown}}</description>
      </card>
    {% endfor %}

    <overlay>
      <content></content>
    </overlay>
{% endblock %}
{% block includes %}
  <script type="text/javascript" src="/js/pages/notes/index.js"></script>
{% endblock %}
