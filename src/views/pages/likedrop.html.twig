{% extends 'layout.html.twig' %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <ol class="breadcrumb">
        <li class="active">LikeDrop</li>
    </ol>
    <div class="row container-fluid">
        <div class="card col-xs-3 col-lg-1">
            <div class="card-block">
                <img src="/img/service/flickr/logo_sm.png" class="service-logo"/> Flickr
                {% if flickr_user == "" %}
                    <a href="/service/flickr/authorize" class="btn btn-secondary-outline btn-sm">Connect</a>
                {% else %}
                    <a href="/service/flickr/authorize" class="btn btn-success btn-sm">Connected</a>
                {% endif %}
            </div>
        </div>
        <div class="card col-xs-3 col-lg-1">
            <div class="card-block">
                <img src="/img/service/gdrive/logo_sm.png" class="service-logo"/> Google
