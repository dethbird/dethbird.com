{% extends 'layout.html.twig' %}
{% block title %} - Project Concept Art {{concept_art.id == "" ? " Create" : "Edit"}}{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <ol class="breadcrumb">
        <li><a href="/projects">Projects</a></li>
        <li><a href="/project/{{project.id}}/detail">{{project.name}}</a></li>
        <li>Concept Art</li>
        <li class="active">{{concept_art.id == "" ? " Create" : "Edit"}}</li>
    </ol>
    <div class="container col-xs-12">
        <form id="concept_art-form">
            <input type="hidden" name="id" value="{{concept_art.id}}" />
            <input type="hidden" name="project_id" value="{{project.id}}" />
            <div class="form-group row">
                <label for="name" class="col-xs-2 form-control-label">Name</label>
                <div class="col-xs-10">
                    <input class="form-control" name="name" value="{{concept_art.name}}" id="name" placeholder="Concept Art Name">
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-xs-2 form-control-label">Description</label>
                <div class="col-xs-10 markdown-edit">
                    <textarea class="form-control markdown-edit-editor" name="description" id="description" placeholder="Concept Art Description" rows="10">{{concept_art.description}}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-2">
                    <a class="btn btn-success submit-button">Save</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/project/concept_art.js"></script>
{% endblock %}
