{% extends 'layout.html.twig' %}
{% block title %} - Project Character {{character.id == "" ? " Create" : "Edit"}}{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <ol class="breadcrumb">
        <li><a href="/projects">Projects</a></li>
        <li>{{project.name}}</li>
        <li>Character</li>
        <li class="active">{{character.id == "" ? " Create" : "Edit"}}</li>
    </ol>
    <div class="container col-xs-12">
        <form id="character-form">
            <input type="hidden" name="id" value="{{character.id}}" />
            <input type="hidden" name="project_id" value="{{project.id}}" />
            <div class="form-group row">
                <label for="character_name" class="col-xs-2 form-control-label">Name</label>
                <div class="col-xs-10">
                    <input class="form-control" name="name" value="{{character.name}}" id="name" placeholder="Character Name">
                </div>
            </div>
            <div class="form-group row">
                <label for="character_name" class="col-xs-2 form-control-label">Description</label>
                <div class="col-xs-10 markdown-edit">
                    <textarea class="form-control markdown-edit-editor" name="description" id="description" placeholder="Character Description" rows="10">{{character.description}}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-2">
                    <a class="btn btn-success submit-button">Save</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/project/character.js"></script>
{% endblock %}
