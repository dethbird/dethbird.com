{% extends 'layout.html.twig' %}
{% block title %} - Project Storyboard Comment Comment{{comment.id == "" ? " Create" : "Edit"}}{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <ol class="breadcrumb">
        <li><a href="/projects">Projects</a></li>
        <li>{{project.name}}</li>
        <li>Storyboards</li>
        <li>{{storyboard.name}}</li>
        <li>Panels</li>
        <li>{{panel.name}}</li>
        <li>Comment</li>
        <li class="active">{{comment.id == "" ? "Create" : "Edit"}}</li>
    </ol>
    <div class="container col-xs-12">
        <form id="comment-form">
            <input type="hidden" name="id" value="{{comment.id}}" />
            <input type="hidden" name="panel_id" value="{{panel.id}}" />
            <div class="form-group row">
                <label for="user_id" class="col-xs-2 form-control-label">User</label>
                <div class="col-xs-10 markdown-edit">
                    <select name="user_id" id="project_user_id" class="form-control">
                    {% for user in users %}
                    <option value="{{user.id}}" {% if user.id == comment.user_id %}selected="selected"{% endif %}>{{user.username}}</option>
                    {% endfor %}
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="date_added" class="col-xs-2 form-control-label">Date</label>
                <div class="col-xs-10">
                    <input class="form-control datepicker" name="date_added" value="{{comment.date_added|date_format_string("Y-m-d")}}" id="date_added" placeholder="Date">
                </div>
            </div>
            <div class="form-group row">
                <label for="status" class="col-xs-2 form-control-label">Status</label>
                <div class="col-xs-10 markdown-edit">
                    <select name="status" id="status" class="form-control">
                    <option value="new">New</option>
                    <option value="resolved">Resolved</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="comment" class="col-xs-2 form-control-label">Comment</label>
                <div class="col-xs-10 markdown-edit">
                    <textarea class="form-control markdown-edit-editor" name="comment" id="comment" placeholder="Comment" rows="10">{{comment.comment}}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-2">
                    <a class="btn btn-success submit-button">Save</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/project/storyboard-panel-comment.js"></script>
{% endblock %}
