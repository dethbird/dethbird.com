{% extends 'layout.html.twig' %}
{% block title %} - Project Character Revision{{revision.id == "" ? " Create" : "Edit"}}{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <ol class="breadcrumb">
        <li><a href="/projects">Projects</a></li>
        <li><a href="/project/{{project.id}}/detail">{{project.name}}</a></li>
        <li>Character</li>
        <li><a href="/project/{{project.id}}/character/{{character.id}}">{{character.name}}</a></li>
        <li>Revision</li>
        <li class="active">{{revision.id == "" ? "Create" : "Edit"}}</li>
    </ol>
    <div class="container col-xs-12">
        <form id="revision-form">
            <input type="hidden" name="id" value="{{revision.id}}" />
            <input type="hidden" name="character_id" value="{{character.id}}" />
            <div class="form-group row">
                <label for="revision_name" class="col-xs-2 form-control-label">Content</label>
                <div class="col-xs-10">
                    <textarea class="form-control" id="content" name="content"  placeholder="Revision Content">{{revision.content}}</textarea>
                    <img src="/img/service/flickr/logo_sm.png" class="service-logo external-content-source" data-content-source="flickr" data-content-target="content"/>
                </div>
            </div>
            <div class="form-group row">
                <label for="orientation" class="col-xs-2 form-control-label">Orientation</label>
                <div class="col-xs-10 markdown-edit">
                    <select name="orientation" id="orientation" class="form-control">
                    <option value="landscape" {% if revision.orientation == "landscape" %}selected="selected"{% endif %}>Landscape</option>
                    <option value="portrait" {% if revision.orientation == "portrait" %}selected="selected"{% endif %}>Portrait</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label for="revision_name" class="col-xs-2 form-control-label">Description</label>
                <div class="col-xs-10 markdown-edit">
                    <textarea class="form-control markdown-edit-editor" name="description" id="description" placeholder="Revision Description" rows="10">{{revision.description}}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-2">
                    <a class="btn btn-success submit-button">Save</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/project/character-revision.js"></script>
{% endblock %}
