{% extends 'layout.html.twig' %}
{% block title %} - Project Storyboard Panel {{panel.id == "" ? " Create" : "Edit"}}{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <ol class="breadcrumb">
        <li><a href="/projects">Projects</a></li>
        <li>{{project.name}}</li>
        <li>Storyboards</li>
        <li>{{storyboard.name}}</li>
        <li>Panel</li>
        <li class="active">{{panel.id == "" ? " Create" : "Edit"}}</li>
    </ol>
    <div class="container col-xs-12">
        <form id="panel-form">
            <input type="hidden" name="id" value="{{panel.id}}" />
            <input type="hidden" name="storyboard_id" value="{{storyboard.id}}" />
            <div class="form-group row">
                <label for="panel_name" class="col-xs-2 form-control-label">Name</label>
                <div class="col-xs-10">
                    <input class="form-control" name="name" value="{{panel.name}}" id="name" placeholder="Panel Name">
                </div>
            </div>
            <div class="form-group row">
                <label for="panel_name" class="col-xs-2 form-control-label">Description</label>
                <div class="col-xs-10 markdown-edit">
                    <textarea class="form-control markdown-edit-editor" name="description" id="description" placeholder="Panel Description" rows="10">{{panel.description}}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-2">
                    <a class="btn btn-success submit-button">Save</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/project/storyboard-panel.js"></script>
{% endblock %}
