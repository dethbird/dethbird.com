{% extends 'layout.html.twig' %}
{% block title %} - Project Reference Image {{reference_image.id == "" ? " Create" : "Edit"}}{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <ol class="breadcrumb">
        <li><a href="/projects">Projects</a></li>
        <li><a href="/project/{{project.id}}/detail">{{project.name}}</a></li>
        <li>Reference Image</li>
        <li class="active">{{reference_image.id == "" ? " Create" : "Edit"}}</li>
    </ol>
    <div class="container col-xs-12">
        <form id="reference_image-form">
            <input type="hidden" name="id" value="{{reference_image.id}}" />
            <input type="hidden" name="project_id" value="{{project.id}}" />
            <div class="form-group row">
                <label for="content" class="col-xs-2 form-control-label">Content</label>
                <div class="col-xs-10">
                    <input class="form-control" name="content" value="{{reference_image.content}}" id="content" placeholder="Reference Image Content">
                </div>
            </div>
            <div class="form-group row">
                <label for="name" class="col-xs-2 form-control-label">Name</label>
                <div class="col-xs-10">
                    <input class="form-control" name="name" value="{{reference_image.name}}" id="name" placeholder="Reference Image Name">
                </div>
            </div>
            <div class="form-group row">
                <label for="description" class="col-xs-2 form-control-label">Description</label>
                <div class="col-xs-10 markdown-edit">
                    <textarea class="form-control markdown-edit-editor" name="description" id="description" placeholder="Reference Image Description" rows="10">{{reference_image.description}}</textarea>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-xs-10 col-xs-offset-2">
                    <a class="btn btn-success submit-button">Save</a>
                </div>
            </div>
        </form>
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/project/reference_image.js"></script>
{% endblock %}
