{% extends 'layout.html.twig' %}
{% block title %} - LikeDrop Pocket{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}
    <ol class="breadcrumb">
        <li><a href="#">LikeDrop</a></li>
        <li class="active"><img src="/img/service/pocket/logo_sm.png" class="service-logo"/>Pocket</li>
    </ol>
    <div class="row container-fluid col-xs-12 content-container" data-service="pocket">

        {% for article in pocket_articles %}
        {% set article_json = article.json|json_decode(true) %}
            <div class="card col-xs-6 col-lg-2">
                <div class="card-block">
                    <div class="display-6">{{article_json.resolved_title|raw}}</div>
                    {% if article_json.has_image %}
                        <img src="{{article_json.image.src}}" />
                    {% endif %}
                    <blockquote>{{article_json.excerpt|truncate(500)|raw}}</blockquote>
                    <a href="{{article_json.resolved_url|raw}}" class="btn btn-info-outline btn-sm" target="_blank">{{article_json.resolved_url|url_hostname}}</a>
                    <a href="https://getpocket.com/a/read/{{article_json.item_id}}" class="btn btn-secondary-outline btn-sm" target="_blank"><img src="//{{hostname}}/img/service/pocket/logo_sm.png" class="service-logo-manage"/></a>
                    {% if article_json.tags|length > 0 %}
                        <br />
                        {% for k, tag in article_json.tags %}
                            <label class="tag">{{k}}</label>
                        {% endfor %}
                    {% endif %}
                    <br />
                    <div class="date text-align-right">{{article_json.time_added|date_format('l F j, Y, g:i a')|time_ago}}</div>
                </div>
            </div>

            {% if loop.index is divisible by(6) %}
                <div class="row"></div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}


{% block includes %}
  <!-- js includes -->
  <script type="text/javascript" src="/js/pages/likedrop.js"></script>
{% endblock %}
