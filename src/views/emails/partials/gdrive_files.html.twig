<div class="container col-xs-12">
    <div class="container col-xs-12">
        <h2><img src="{{hostname}}/img/service/gdrive/logo_sm.png" class="service-logo"/> Google Drive</h2>

        {#<p>You saved <span class="number">{{gdrive_files|length}}</span> gdrive file(s).</p>#}
    </div>

    {% for file in gdrive_files %}
    {% set file_json = file.json|json_decode(true) %}
        <div class="content container col-xs-12">
            {# <pre>{{file_json|print_r}}</pre> #}
            {% if file_json.mimeType=="image/jpeg" or file_json.mimeType=="image/png" or  file_json.mimeType=="image/x-photoshop" %}
            <img src="http://{{hostname}}/service/gdrive/thumbnail/{{file_json|google_drive_thumbnail_filename}}" class="content-image" title="{{file_json.name|raw}}" alt="{{file_json.name|raw}}"/><br />
            {% endif %}
            <a href="{{file_json.webViewLink|raw}}" class="title"><img src="{{file_json.iconLink|raw}}" /> {{file_json.name|raw}}</a>
            <br />
            <span class="date">{{file_json.modifiedByMeTime|time_ago}}</span>
            <br />
            <label class="tag">{{file_json.folder|raw|google_drive_foldername}}</label><br />
        </div>
    {% endfor %}
</div>
