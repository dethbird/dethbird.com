{% extends 'layout-mockup-logged-in.html.twig' %}
{% block title %}{% endblock %}
{% block head %}
    {{parent()}}
{% endblock %}
{% block content %}
    {{ parent() }}

{% include 'mockup/partials/javascript.html.twig' with {'foo': 'bar'} %}
{% include 'mockup/partials/header-menu.html.twig' with {'foo': 'bar'} %}

<div class="ui vertical stripe segment">
    <div class="ui grid container">
        <div class="eight wide column left aligned">
            <h1 class="ui header">The Pants Store</h1>
        </div>
        <div class="eight wide column right aligned">
            <div class="ui dropdown">
                <div class="text">Menu</div>
                <i class="dropdown icon"></i>
                <div class="menu">
                    <div class="item">Convert to project</div>
                </div>
            </div>
        </div>
    </div>
    <div class="ui container">
        <h2 class="ui grey header">Script</h2>
    </div>
    <div class="ui text container">
        <a class="ui image label">
            <img src="https://c1.staticflickr.com/3/2533/3996839316_699ee275b7_b.jpg"> Beepo
        </a>
        <a class="ui image label">
            <img src="https://i2.wp.com/cdn2.iconfinder.com/static/2ae174f07522a6b8c7c997bf4b62a821/assets/img/default-avatar-user.png?ssl=1"> Bartender
        </a>
        <a class="ui image label">
            <img src="https://i2.wp.com/cdn2.iconfinder.com/static/2ae174f07522a6b8c7c997bf4b62a821/assets/img/default-avatar-user.png?ssl=1"> DB3700
        </a>
    </div>
    <br />
    <div class="ui text container">
        <div class="ui segment">
            <p class="fountain">{{ configs.example.fountain.full }}</p>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $('.ui.dropdown').dropdown();
        $('.fountain').each(function(i,e){
            e = $(e);
            const parsed = fountain.parse(e.html());
            e.html(parsed.html.title_page + parsed.html.script);
        });
        $('.ui.accordion').accordion();
    });
</script>

