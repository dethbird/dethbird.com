        </a>
    </div>
    <br />
    <div class="ui text container">
        <div class="ui segment">
            <p class="fountain">{{ configs.example.fountain.snippet }}</p>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){
        $('.ui.dropdown').dropdown();
        $('.fountain').each(function(i,e){
            e = $(e);
            console.log(fountain.parse(e.html()).html);
            e.html(fountain.parse(e.html()).html.script);
        });
        $('.ui.accordion').accordion();
    });
</script>

