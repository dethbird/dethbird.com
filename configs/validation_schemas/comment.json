{
	"$schema": "http://json-schema.org/draft-03/schema",
	"properties": {
		"user_id": {
			"required": true,
		    "type": "integer"
		},
		"status": {
			"required": true,
		    "type": "string"
		},
		"comment": {
			"required": true,
		    "type": ["string", "integer", null]
		},
		"date_added": {
            "required": true,
			"type": ["string", "integer"]
		},
		"entity_id": {
            "required": true,
			"type": "integer"
		},
		"entity_table_name": {
            "required": true,
			"type": ["string"]
		}
	}
}
